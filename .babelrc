{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src/"],
        "extensions": [
          ".ios.ts",
          ".android.ts",
          ".ts",
          ".ios.tsx",
          ".android.tsx",
          ".tsx",
          ".jsx",
          ".js",
          ".json"
        ],
        "alias": {
          "@root": "./",
          "@config": "./src/Config/",
          "@redux": "./src/Redux/",
          "@components": "./src/Components/",
          "@assets": "./src/Assets/",
          "@locales": "./src/Locales/",
          "@styles": "./src/Styles/",
          "@routes": "./src/Routes/",
          "@validations": "./src/Utils/Validations/",
          "@utils": "./src/Utils/",
          "@pages": "./src/Pages/"
        }
      }
    ]
  ]
}
